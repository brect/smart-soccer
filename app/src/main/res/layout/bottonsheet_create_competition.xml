<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <View
        android:id="@+id/drag_handle"
        android:layout_width="80dp"
        android:layout_height="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/drag_handle_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_createCompetition_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Criar nova competição"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textInput_groupName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drag_handle"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput_groupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Quantos times?"
        app:expandedHintEnabled="false"
        app:hintEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/checkBox_positions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_createCompetition_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_textInput_groupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantos times?"
            android:inputType="text"
            android:text="Quantos times?"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/checkBox_positions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Considerar posições?"
        app:layout_constraintBottom_toTopOf="@+id/checkBox_abilities"
        app:layout_constraintEnd_toEndOf="@+id/textInput_groupName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textInput_groupName"
        app:layout_constraintTop_toBottomOf="@+id/textInput_groupName" />

    <CheckBox
        android:id="@+id/checkBox_abilities"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Considerar overalls?"
        app:layout_constraintBottom_toTopOf="@+id/checkBox_dm"
        app:layout_constraintEnd_toEndOf="@+id/checkBox_positions"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/checkBox_positions"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_positions" />

    <CheckBox
        android:id="@+id/checkBox_dm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Considerar departamento médico?"
        app:layout_constraintBottom_toTopOf="@+id/flipper_group"
        app:layout_constraintEnd_toEndOf="@+id/checkBox_abilities"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/checkBox_abilities"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_abilities" />

    <ViewFlipper
        android:id="@+id/flipper_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_dm">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_createGroup"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="criar"
            android:textAllCaps="false" />

        <ProgressBar
            android:id="@+id/progress_group"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center" />

    </ViewFlipper>

</androidx.constraintlayout.widget.ConstraintLayout>