<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/textView_competitionPlayerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bruno de Lima Silva"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_competitionPosition"
        app:layout_constraintEnd_toStartOf="@+id/ratingBar_competitionAverageSoccerPlayer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/ratingBar_competitionAverageSoccerPlayer"
        style="@android:style/Widget.Holo.Light.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:numStars="5"
        app:layout_constraintBottom_toBottomOf="@+id/textView_competitionPlayerName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_competitionPlayerName"
        app:layout_constraintTop_toTopOf="@+id/textView_competitionPlayerName" />

    <TextView
        android:id="@+id/textView_competitionPosition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Lateral"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView_competitionPlayerName"
        app:layout_constraintTop_toBottomOf="@+id/textView_competitionPlayerName" />


</androidx.constraintlayout.widget.ConstraintLayout>