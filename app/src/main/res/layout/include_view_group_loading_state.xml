<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_characters"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:shimmer_repeat_mode="restart"
    app:shimmer_shape="radial">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/shimmer_layout_group_header" />

        <include layout="@layout/shimmer_layout_group_players" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorOnPrimaryContainer" />

        <include layout="@layout/shimmer_layout_group_game_info" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorOnPrimaryContainer" />

        <include layout="@layout/shimmer_layout_group_competition_info" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorOnPrimaryContainer" />

        <include layout="@layout/shimmer_layout_group_info" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorOnPrimaryContainer" />

        <include layout="@layout/shimmer_layout_group_info" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorOnPrimaryContainer" />
    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>