<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_character"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_group_top_left"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:background="@drawable/background_top_rounded_border"
            android:backgroundTint="#DFDFDF">

            <View
                android:id="@+id/textView_groupType_left"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="2dp"
                android:background="#7D7D7D"
                app:layout_constraintBottom_toTopOf="@+id/textView_group_title_left"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView_group_title_left"
                tools:ignore="contentDescription" />

            <View
                android:id="@+id/textView_group_title_left"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                android:background="#7D7D7D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="contentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_bottom_rounded_border"
            android:backgroundTint="#7D7D7D"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginVertical="16dp"
                android:background="#B5B5B5" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_group_top"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:background="@drawable/background_top_rounded_border"
            android:backgroundTint="#DFDFDF">

            <View
                android:id="@+id/textView_groupType"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="2dp"
                android:background="#7D7D7D"
                app:layout_constraintBottom_toTopOf="@+id/textView_group_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView_group_title"
                tools:ignore="contentDescription" />

            <View
                android:id="@+id/textView_group_title"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                android:background="#7D7D7D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="contentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_bottom_rounded_border"
            android:backgroundTint="#7D7D7D"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginVertical="16dp"
                android:background="#B5B5B5" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
